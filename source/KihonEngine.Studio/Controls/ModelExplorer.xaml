<UserControl x:Class="KihonEngine.Studio.Controls.ModelExplorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KihonEngine.Studio.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView Margin="10" Name="lvModels" SelectionMode="Single" SelectionChanged="lvModels_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Index" Width="100" DisplayMemberBinding="{Binding Index}" />
                    <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding Type}" />
                    <GridViewColumn Header="Color" Width="250" DisplayMemberBinding="{Binding Color}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
