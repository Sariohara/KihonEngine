<UserControl x:Class="KihonEngine.GameEngine.Graphics.Output.HeadUpDisplayPlayMode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KihonEngine.GameEngine.Graphics.Output"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="gridHeadUpDisplay" Cursor="None">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Play mode. " Foreground="Red"/>
            <TextBlock x:Name="lblMinimalHelp" Text="Press ESC to quit" Foreground="Red"/>
        </StackPanel>
        
        <Grid x:Name="gridCursor" VerticalAlignment="Center" HorizontalAlignment="Center" Width="12" Height="12" >
            <Line  X1="6" Y1="0" X2="6" Y2="4" Stroke="White" StrokeThickness="2" />
            <Line  X1="6" Y1="8" X2="6" Y2="12" Stroke="White" StrokeThickness="2" />
            <Line  X1="0" Y1="6" X2="4" Y2="6" Stroke="White" StrokeThickness="2" />
            <Line  X1="8" Y1="6" X2="12" Y2="6" Stroke="White" StrokeThickness="2" />
        </Grid>
    </Grid>
</UserControl>
