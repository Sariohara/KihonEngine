    <None Remove="Content\Images\Skyboxes\sky0-right.png" />
    <None Remove="Content\Images\Skyboxes\sky0-top.png" />
    <None Remove="Content\Images\Skyboxes\sky1-back.png" />
    <None Remove="Content\Images\Skyboxes\sky1-bottom.png" />
    <None Remove="Content\Images\Skyboxes\sky1-front.png" />
    <None Remove="Content\Images\Skyboxes\sky1-full.png" />
    <None Remove="Content\Images\Skyboxes\sky1-left.png" />
    <None Remove="Content\Images\Skyboxes\sky1-right.png" />
    <None Remove="Content\Images\Skyboxes\sky1-top.png" />
    <None Remove="Content\Images\Skyboxes\sky3-full.png" />
    <None Remove="Content\Images\Textures\default.png" />
    <None Remove="Content\Images\Textures\floor0.jpg" />
    <None Remove="Content\Images\Textures\Hon.png" />
    <None Remove="Content\Images\Textures\Ki.png" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Content\Images\Skyboxes\sky0-back.png" />
    <EmbeddedResource Include="Content\Images\Skyboxes\sky0-bottom.png" />
    <EmbeddedResource Include="Content\Images\Skyboxes\sky0-front.png" />
    <EmbeddedResource Include="Content\Images\Skyboxes\sky0-full.png" />
